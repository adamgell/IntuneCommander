<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:IntuneManager.Desktop.ViewModels"
        xmlns:views="using:IntuneManager.Desktop.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        x:Class="IntuneManager.Desktop.Views.MainWindow"
        x:Name="MainWin"
        x:DataType="vm:MainWindowViewModel"
        Title="{Binding WindowTitle}"
        Width="1000" Height="600"
        MinWidth="800" MinHeight="500">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <DockPanel>
        <!-- Status Bar -->
        <Border DockPanel.Dock="Bottom" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                Padding="8,4">
            <DockPanel>
                <TextBlock Text="{Binding StatusText}" FontSize="12" VerticalAlignment="Center" />
                <ProgressBar IsIndeterminate="True" IsVisible="{Binding IsBusy}"
                             Width="100" Height="4"
                             HorizontalAlignment="Right" VerticalAlignment="Center" />
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <Panel>
            <!-- Login View (shown when not connected) -->
            <ContentControl Content="{Binding LoginViewModel}"
                            IsVisible="{Binding !IsConnected}">
                <ContentControl.ContentTemplate>
                    <DataTemplate DataType="vm:LoginViewModel">
                        <views:LoginView />
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>

            <!-- Connected Content (shown when connected) -->
            <DockPanel IsVisible="{Binding IsConnected}">
                <!-- Toolbar -->
                <Border DockPanel.Dock="Top" Padding="8"
                        Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}">
                    <DockPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button Content="Refresh" Command="{Binding RefreshCommand}" />
                            <Button Content="Export Selected" Command="{Binding ExportSelectedCommand}"
                                    IsEnabled="{Binding SelectedConfiguration, Converter={x:Static ObjectConverters.IsNotNull}}" />
                            <Button Content="Export All" Command="{Binding ExportAllCommand}" />
                            <Button Content="Import" x:Name="ImportButton" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                            <TextBlock Text="{Binding ActiveProfile.Name}"
                                       VerticalAlignment="Center" FontSize="12" />
                            <Button Content="Disconnect" Command="{Binding DisconnectCommand}" />
                        </StackPanel>
                    </DockPanel>
                </Border>

                <!-- Content Area -->
                <Grid ColumnDefinitions="*,Auto,*">
                    <!-- Configuration List -->
                    <DockPanel Grid.Column="0" Margin="8">
                        <TextBlock DockPanel.Dock="Top" Text="Device Configurations"
                                   FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8" />
                        <DataGrid ItemsSource="{Binding DeviceConfigurations}"
                                  SelectedItem="{Binding SelectedConfiguration}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserResizeColumns="True"
                                  GridLinesVisibility="Horizontal"
                                  BorderThickness="1"
                                  BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Display Name"
                                                    Binding="{Binding DisplayName}"
                                                    Width="*" />
                                <DataGridTextColumn Header="Last Modified"
                                                    Binding="{Binding LastModifiedDateTime}"
                                                    Width="150" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>

                    <!-- Splitter -->
                    <GridSplitter Grid.Column="1" Width="4"
                                  Background="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" />

                    <!-- Detail Pane -->
                    <DockPanel Grid.Column="2" Margin="8">
                        <TextBlock DockPanel.Dock="Top" Text="Details"
                                   FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8" />

                        <!-- No selection message -->
                        <TextBlock Text="Select a configuration to view details"
                                   VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Foreground="Gray" FontSize="14"
                                   IsVisible="{Binding SelectedConfiguration, Converter={x:Static ObjectConverters.IsNull}}" />

                        <!-- Selected item details -->
                        <ScrollViewer IsVisible="{Binding SelectedConfiguration, Converter={x:Static ObjectConverters.IsNotNull}}">
                            <StackPanel Spacing="12" DataContext="{Binding SelectedConfiguration}">
                                <StackPanel Spacing="2">
                                    <TextBlock Text="Display Name" FontSize="11" Foreground="Gray" />
                                    <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" TextWrapping="Wrap" />
                                </StackPanel>
                                <StackPanel Spacing="2">
                                    <TextBlock Text="ID" FontSize="11" Foreground="Gray" />
                                    <TextBlock Text="{Binding Id}" FontSize="12" />
                                </StackPanel>
                                <StackPanel Spacing="2">
                                    <TextBlock Text="Description" FontSize="11" Foreground="Gray" />
                                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                                </StackPanel>
                                <StackPanel Spacing="2">
                                    <TextBlock Text="Created" FontSize="11" Foreground="Gray" />
                                    <TextBlock Text="{Binding CreatedDateTime}" />
                                </StackPanel>
                                <StackPanel Spacing="2">
                                    <TextBlock Text="Last Modified" FontSize="11" Foreground="Gray" />
                                    <TextBlock Text="{Binding LastModifiedDateTime}" />
                                </StackPanel>
                                <StackPanel Spacing="2">
                                    <TextBlock Text="Version" FontSize="11" Foreground="Gray" />
                                    <TextBlock Text="{Binding Version}" />
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </DockPanel>
                </Grid>
            </DockPanel>

            <!-- Error Banner -->
            <Border Background="#33FF0000" Padding="8" VerticalAlignment="Top"
                    IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap" />
            </Border>
        </Panel>
    </DockPanel>
</Window>
