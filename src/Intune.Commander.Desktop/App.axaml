<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Intune.Commander.Desktop.App"
             xmlns:local="using:Intune.Commander.Desktop"
             xmlns:suki="https://github.com/kikipoulet/SukiUI"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Resources>
        <ResourceDictionary>
            <!-- ═══ Design Tokens: Typography ═══ -->
            <x:Double x:Key="FontSizeCaption">11</x:Double>
            <x:Double x:Key="FontSizeBody">12</x:Double>
            <x:Double x:Key="FontSizeSubheading">14</x:Double>
            <x:Double x:Key="FontSizeHeading">18</x:Double>
            <x:Double x:Key="FontSizeDisplay">24</x:Double>

            <!-- ═══ Design Tokens: Spacing ═══ -->
            <x:Double x:Key="SpacingXS">2</x:Double>
            <x:Double x:Key="SpacingSM">4</x:Double>
            <x:Double x:Key="SpacingMD">8</x:Double>
            <x:Double x:Key="SpacingLG">12</x:Double>
            <x:Double x:Key="SpacingXL">16</x:Double>

            <!-- ═══ Design Tokens: Corner Radius ═══ -->
            <CornerRadius x:Key="RadiusSmall">4</CornerRadius>
            <CornerRadius x:Key="RadiusMedium">6</CornerRadius>
            <CornerRadius x:Key="RadiusLarge">8</CornerRadius>

            <!-- ═══ Design Tokens: Thickness ═══ -->
            <Thickness x:Key="CardPadding">12</Thickness>
            <Thickness x:Key="CardMargin">0,0,0,12</Thickness>

            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <!-- App custom brushes -->
                    <SolidColorBrush x:Key="AppTextSecondaryBrush" Color="#71717A" />
                    <SolidColorBrush x:Key="AppNavTextBrush" Color="#09090B" />
                    <SolidColorBrush x:Key="AppErrorTextBrush" Color="#B00020" />
                    <SolidColorBrush x:Key="AppErrorBackgroundBrush" Color="#1AFF0000" />
                    <!-- Extracted shared colors -->
                    <SolidColorBrush x:Key="ProgressBarForegroundBrush" Color="#00CC55" />
                    <SolidColorBrush x:Key="ProgressBarBackgroundBrush" Color="#224400" />
                    <SolidColorBrush x:Key="SuccessBadgeBrush" Color="#1A6B3C" />
                    <SolidColorBrush x:Key="ErrorBadgeBrush" Color="#CC3300" />
                    <!-- Shadcn-compatible replacements for Fluent SystemControl resources -->
                    <Color x:Key="SystemAccentColor">#2563EB</Color>
                    <SolidColorBrush x:Key="SystemControlBackgroundChromeMediumLowBrush" Color="#F4F4F5" />
                    <SolidColorBrush x:Key="SystemControlBackgroundChromeMediumBrush" Color="#E4E4E7" />
                    <SolidColorBrush x:Key="SystemControlBackgroundAltHighBrush" Color="#FFFFFF" />
                    <SolidColorBrush x:Key="SystemControlBackgroundBaseLowBrush" Color="#E4E4E7" />
                    <SolidColorBrush x:Key="SystemControlForegroundBaseMediumLowBrush" Color="#D4D4D8" />
                    <SolidColorBrush x:Key="SystemControlForegroundBaseHighBrush" Color="#09090B" />
                    <SolidColorBrush x:Key="SystemControlForegroundBaseMediumBrush" Color="#71717A" />
                    <SolidColorBrush x:Key="SystemControlForegroundAccentBrush" Color="#2563EB" />
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <!-- App custom brushes -->
                    <SolidColorBrush x:Key="AppTextSecondaryBrush" Color="#A1A1AA" />
                    <SolidColorBrush x:Key="AppNavTextBrush" Color="#FAFAFA" />
                    <SolidColorBrush x:Key="AppErrorTextBrush" Color="#FFB3B3" />
                    <SolidColorBrush x:Key="AppErrorBackgroundBrush" Color="#33FF6B6B" />
                    <!-- Extracted shared colors -->
                    <SolidColorBrush x:Key="ProgressBarForegroundBrush" Color="#00CC55" />
                    <SolidColorBrush x:Key="ProgressBarBackgroundBrush" Color="#224400" />
                    <SolidColorBrush x:Key="SuccessBadgeBrush" Color="#1A6B3C" />
                    <SolidColorBrush x:Key="ErrorBadgeBrush" Color="#E57373" />
                    <!-- Shadcn-compatible replacements for Fluent SystemControl resources -->
                    <Color x:Key="SystemAccentColor">#3B82F6</Color>
                    <SolidColorBrush x:Key="SystemControlBackgroundChromeMediumLowBrush" Color="#18181B" />
                    <SolidColorBrush x:Key="SystemControlBackgroundChromeMediumBrush" Color="#27272A" />
                    <SolidColorBrush x:Key="SystemControlBackgroundAltHighBrush" Color="#09090B" />
                    <SolidColorBrush x:Key="SystemControlBackgroundBaseLowBrush" Color="#27272A" />
                    <SolidColorBrush x:Key="SystemControlForegroundBaseMediumLowBrush" Color="#3F3F46" />
                    <SolidColorBrush x:Key="SystemControlForegroundBaseHighBrush" Color="#FAFAFA" />
                    <SolidColorBrush x:Key="SystemControlForegroundBaseMediumBrush" Color="#A1A1AA" />
                    <SolidColorBrush x:Key="SystemControlForegroundAccentBrush" Color="#3B82F6" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <suki:SukiTheme ThemeColor="Blue" />
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Simple.xaml"/>

        <!-- ═══ Button Size Classes ═══ -->
        <Style Selector="Button.Small">
            <Setter Property="Padding" Value="8,3" />
            <Setter Property="FontSize" Value="{StaticResource FontSizeCaption}" />
        </Style>
        <Style Selector="Button.Medium">
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
        </Style>
        <Style Selector="Button.Large">
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
        </Style>

        <!-- ═══ Card Border Style ═══ -->
        <Style Selector="Border.Card">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" />
            <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}" />
            <Setter Property="Padding" Value="{StaticResource CardPadding}" />
            <Setter Property="Margin" Value="{StaticResource CardMargin}" />
        </Style>

        <!-- ═══ Detail Section Header ═══ -->
        <Style Selector="TextBlock.SectionHeader">
            <Setter Property="FontSize" Value="{StaticResource FontSizeSubheading}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{DynamicResource SystemAccentColor}" />
            <Setter Property="Margin" Value="0,0,0,6" />
        </Style>
        <Style Selector="TextBlock.SectionHeaderSpaced">
            <Setter Property="FontSize" Value="{StaticResource FontSizeSubheading}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{DynamicResource SystemAccentColor}" />
            <Setter Property="Margin" Value="0,12,0,6" />
        </Style>

        <!-- ═══ Section Card (detail pane section container) ═══ -->
        <Style Selector="Border.SectionCard">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" />
            <Setter Property="CornerRadius" Value="{StaticResource RadiusSmall}" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Margin" Value="0,0,0,12" />
        </Style>

        <!-- ═══ Field Label ═══ -->
        <Style Selector="TextBlock.FieldLabel">
            <Setter Property="FontSize" Value="{StaticResource FontSizeCaption}" />
            <Setter Property="Foreground" Value="{DynamicResource AppTextSecondaryBrush}" />
        </Style>

        <!-- Nav sidebar button styles -->
        <Style Selector="Button.NavItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="12,7" />
            <Setter Property="Margin" Value="6,1" />
            <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
        </Style>
        <Style Selector="Button.NavItem /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}" />
        </Style>
        <Style Selector="Button.NavItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}" />
        </Style>
        <Style Selector="Button.NavItem.active">
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style Selector="Button.NavItem.active /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemControlForegroundAccentBrush}" />
        </Style>
    </Application.Styles>
</Application>