<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Intune.Commander.Desktop.ViewModels"
             xmlns:controls="using:Intune.Commander.Desktop.Views.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Intune.Commander.Desktop.Views.Controls.AssignmentListControl"
             x:DataType="controls:AssignmentListControl">

    <StackPanel>
        <!-- Section Header -->
        <TextBlock Text="Assignments" Classes="SectionHeader" />

        <!-- Section Card -->
        <Border Classes="SectionCard">
            <StackPanel>
                <TextBlock Text="No assignments"
                           Foreground="{DynamicResource AppTextSecondaryBrush}" FontSize="{StaticResource FontSizeBody}"
                           IsVisible="{Binding !Assignments.Count, RelativeSource={RelativeSource AncestorType=controls:AssignmentListControl}}" />
                <ItemsControl ItemsSource="{Binding Assignments, RelativeSource={RelativeSource AncestorType=controls:AssignmentListControl}}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:AssignmentDisplayItem">
                            <Border Padding="4,3" Margin="0,0,0,4">
                                <DockPanel>
                                    <Border DockPanel.Dock="Left"
                                            Background="{DynamicResource SystemAccentColor}"
                                            CornerRadius="2" Padding="5,1" Margin="0,2,6,0"
                                            VerticalAlignment="Top">
                                        <SelectableTextBlock Text="{Binding TargetKind}"
                                                   FontSize="{StaticResource FontSizeCaption}" Foreground="White" />
                                    </Border>
                                    <StackPanel Spacing="1">
                                        <DockPanel>
                                            <SelectableTextBlock Text="{Binding Intent}"
                                                       DockPanel.Dock="Right"
                                                       FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}"
                                                       Margin="6,0,0,0"
                                                       VerticalAlignment="Center"
                                                       IsVisible="{Binding ShowIntent, RelativeSource={RelativeSource AncestorType=controls:AssignmentListControl}}" />
                                            <SelectableTextBlock Text="{Binding Target}"
                                                       FontSize="{StaticResource FontSizeBody}" TextWrapping="Wrap" />
                                        </DockPanel>
                                        <SelectableTextBlock Text="{Binding GroupId}"
                                                   FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" Opacity="0.7"
                                                   IsVisible="{Binding GroupId, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                    </StackPanel>
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
