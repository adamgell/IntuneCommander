                                                    <SelectableTextBlock Text="{Binding NestedGroups}" FontSize="{StaticResource FontSizeSubheading}" />
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>
                                    </Border>

                                    <!-- Section: Members List -->
                                    <TextBlock Text="Members" Classes="SectionHeader" />
                                    <ProgressBar IsIndeterminate="True"
                                                 IsVisible="{Binding $parent[ScrollViewer].((vm:MainWindowViewModel)DataContext).IsLoadingGroupMembers}"
                                                 Height="2" Margin="0,0,0,4" />
                                    <Border Classes="SectionCard">
                                        <StackPanel>
                                            <TextBlock Text="No members"
                                                       Foreground="{DynamicResource AppTextSecondaryBrush}" FontSize="{StaticResource FontSizeBody}"
                                                       IsVisible="{Binding !$parent[ScrollViewer].((vm:MainWindowViewModel)DataContext).SelectedGroupMembers.Count}" />
                                            <ItemsControl ItemsSource="{Binding $parent[ScrollViewer].((vm:MainWindowViewModel)DataContext).SelectedGroupMembers}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Padding="4,3" Margin="0,0,0,4">
                                                            <DockPanel>
                                                                <Border DockPanel.Dock="Left"
                                                                        Background="{DynamicResource SystemAccentColor}"
                                                                        CornerRadius="2" Padding="5,1" Margin="0,2,6,0"
                                                                        VerticalAlignment="Top">
                                                                    <TextBlock Text="{Binding MemberType}"
                                                                               FontSize="{StaticResource FontSizeCaption}" Foreground="White" />
                                                                </Border>
                                                                <TextBlock DockPanel.Dock="Right"
                                                                           Text="{Binding Status}"
                                                                           FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}"
                                                                           Margin="6,0,0,0"
                                                                           VerticalAlignment="Center"
                                                                           IsVisible="{Binding Status, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                                                <StackPanel Spacing="1">
                                                                    <SelectableTextBlock Text="{Binding DisplayName}"
                                                                                         FontSize="{StaticResource FontSizeBody}" TextWrapping="Wrap" />
                                                                    <SelectableTextBlock Text="{Binding SecondaryInfo}"
                                                                                         FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" Opacity="0.8"
                                                                                         IsVisible="{Binding SecondaryInfo, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                                                    <SelectableTextBlock Text="{Binding TertiaryInfo}"
                                                                                         FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" Opacity="0.6"
                                                                                         IsVisible="{Binding TertiaryInfo, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                                                </StackPanel>
                                                            </DockPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>

                                </StackPanel>
                            </ScrollViewer>

                            <!-- ═══════════════════════════════════════════ -->
                            <!-- Device Management Script details           -->
                            <!-- ═══════════════════════════════════════════ -->
                            <ScrollViewer IsVisible="{Binding SelectedDeviceManagementScript, Converter={x:Static ObjectConverters.IsNotNull}}"
                                          HorizontalScrollBarVisibility="Disabled">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="Properties" Classes="SectionHeader" />
                                    <Border Classes="SectionCard">
                                        <StackPanel Spacing="10" DataContext="{Binding SelectedDeviceManagementScript}">
                                            <StackPanel Spacing="2">
                                                <TextBlock Text="Display Name" FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                                <SelectableTextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" TextWrapping="Wrap" />
                                            </StackPanel>
                                            <StackPanel Spacing="2">
                                                <TextBlock Text="Description" FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                                <SelectableTextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                                            </StackPanel>
                                            <StackPanel Spacing="2">
                                                <TextBlock Text="File Name" FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                                <SelectableTextBlock Text="{Binding FileName}" FontSize="{StaticResource FontSizeBody}" />
                                            </StackPanel>
                                            <Grid ColumnDefinitions="*,*">
                                                <StackPanel Grid.Column="0" Spacing="2">
                                                    <TextBlock Text="Run As Account" FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                                    <SelectableTextBlock Text="{Binding RunAsAccount}" FontSize="{StaticResource FontSizeBody}" />
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" Spacing="2">
                                                    <TextBlock Text="Run As 32-Bit" FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                                    <SelectableTextBlock Text="{Binding RunAs32Bit}" FontSize="{StaticResource FontSizeBody}" />
                                                </StackPanel>
                                            </Grid>
                                            <StackPanel Spacing="2">
                                                <TextBlock Text="Enforce Signature Check" FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                                <SelectableTextBlock Text="{Binding EnforceSignatureCheck}" FontSize="{StaticResource FontSizeBody}" />
                                            </StackPanel>
                                            <Grid ColumnDefinitions="*,*">
                                                <StackPanel Grid.Column="0" Spacing="2">
                                                    <TextBlock Text="Created" FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                                    <SelectableTextBlock Text="{Binding CreatedDateTime, Converter={x:Static conv:HumanDateTimeConverter.Instance}}" FontSize="{StaticResource FontSizeBody}" />
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" Spacing="2">
                                                    <TextBlock Text="Last Modified" FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                                    <SelectableTextBlock Text="{Binding LastModifiedDateTime, Converter={x:Static conv:HumanDateTimeConverter.Instance}}" FontSize="{StaticResource FontSizeBody}" />
                                                </StackPanel>
                                            </Grid>
                                            <StackPanel Spacing="2">
                                                <TextBlock Text="ID" FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                                <SelectableTextBlock Text="{Binding Id}" FontSize="{StaticResource FontSizeCaption}" Opacity="0.8" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                    <!-- Script Content -->
                                    <TextBlock Text="Script Content" Classes="SectionHeader" />
                                    <Border Classes="SectionCard">
                                        <SelectableTextBlock Text="{Binding SelectedDeviceManagementScript.ScriptContent, Converter={x:Static conv:BytesToUtf8Converter.Instance}}"
                                                             FontFamily="Monospace" FontSize="{StaticResource FontSizeCaption}"
                                                             TextWrapping="Wrap"
                                                             Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                    </Border>

                                    <!-- Section: Assignments -->
                                    <controls:AssignmentListControl Assignments="{Binding SelectedItemAssignments}" />

                                </StackPanel>
                            </ScrollViewer>

                            <!-- ═══════════════════════════════════════════ -->
                            <!-- Device Shell Script details                -->
                            <!-- ═══════════════════════════════════════════ -->
                            <ScrollViewer IsVisible="{Binding SelectedDeviceShellScript, Converter={x:Static ObjectConverters.IsNotNull}}"
                                          HorizontalScrollBarVisibility="Disabled">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="Properties" Classes="SectionHeader" />
                                    <Border Classes="SectionCard">
                                        <StackPanel Spacing="10" DataContext="{Binding SelectedDeviceShellScript}">
                                            <StackPanel Spacing="2">
                                                <TextBlock Text="Display Name" FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                                <SelectableTextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" TextWrapping="Wrap" />
                                            </StackPanel>
                                            <StackPanel Spacing="2">
                                                <TextBlock Text="Description" FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                                <SelectableTextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                                            </StackPanel>
                                            <StackPanel Spacing="2">
                                                <TextBlock Text="File Name" FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                                <SelectableTextBlock Text="{Binding FileName}" FontSize="{StaticResource FontSizeBody}" />
                                            </StackPanel>
                                            <Grid ColumnDefinitions="*,*">
                                                <StackPanel Grid.Column="0" Spacing="2">
                                                    <TextBlock Text="Run As Account" FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                                    <SelectableTextBlock Text="{Binding RunAsAccount}" FontSize="{StaticResource FontSizeBody}" />
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" Spacing="2">
                                                    <TextBlock Text="Execution Frequency" FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                                    <SelectableTextBlock Text="{Binding ExecutionFrequency}" FontSize="{StaticResource FontSizeBody}" />
                                                </StackPanel>
                                            </Grid>
                                            <Grid ColumnDefinitions="*,*">
                                                <StackPanel Grid.Column="0" Spacing="2">
                                                    <TextBlock Text="Retry Count" FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                                    <SelectableTextBlock Text="{Binding RetryCount}" FontSize="{StaticResource FontSizeBody}" />
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" Spacing="2">
                                                    <TextBlock Text="Block Execution Notifications" FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                                    <SelectableTextBlock Text="{Binding BlockExecutionNotifications}" FontSize="{StaticResource FontSizeBody}" />
                                                </StackPanel>
                                            </Grid>
                                            <Grid ColumnDefinitions="*,*">
                                                <StackPanel Grid.Column="0" Spacing="2">
                                                    <TextBlock Text="Created" FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                                    <SelectableTextBlock Text="{Binding CreatedDateTime, Converter={x:Static conv:HumanDateTimeConverter.Instance}}" FontSize="{StaticResource FontSizeBody}" />
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" Spacing="2">
                                                    <TextBlock Text="Last Modified" FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                                    <SelectableTextBlock Text="{Binding LastModifiedDateTime, Converter={x:Static conv:HumanDateTimeConverter.Instance}}" FontSize="{StaticResource FontSizeBody}" />
                                                </StackPanel>
                                            </Grid>
                                            <StackPanel Spacing="2">
                                                <TextBlock Text="ID" FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                                <SelectableTextBlock Text="{Binding Id}" FontSize="{StaticResource FontSizeCaption}" Opacity="0.8" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                    <!-- Script Content -->
                                    <TextBlock Text="Script Content" Classes="SectionHeader" />
                                    <Border Classes="SectionCard">
                                        <SelectableTextBlock Text="{Binding SelectedDeviceShellScript.ScriptContent, Converter={x:Static conv:BytesToUtf8Converter.Instance}}"
                                                             FontFamily="Monospace" FontSize="{StaticResource FontSizeCaption}"
                                                             TextWrapping="Wrap"
                                                             Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                    </Border>

                                    <!-- Section: Assignments -->
                                    <controls:AssignmentListControl Assignments="{Binding SelectedItemAssignments}" />

                                </StackPanel>
                            </ScrollViewer>

                            <!-- ═══════════════════════════════════════════ -->
                            <!-- Compliance Script details                  -->
                            <!-- ═══════════════════════════════════════════ -->
                            <ScrollViewer IsVisible="{Binding SelectedComplianceScript, Converter={x:Static ObjectConverters.IsNotNull}}"
                                          HorizontalScrollBarVisibility="Disabled">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="Properties" Classes="SectionHeader" />
                                    <Border Classes="SectionCard">
                                        <StackPanel Spacing="10" DataContext="{Binding SelectedComplianceScript}">
                                            <StackPanel Spacing="2">
                                                <TextBlock Text="Display Name" FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                                <SelectableTextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" TextWrapping="Wrap" />
                                            </StackPanel>
                                            <StackPanel Spacing="2">
                                                <TextBlock Text="Description" FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                                <SelectableTextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                                            </StackPanel>
                                            <Grid ColumnDefinitions="*,*">
                                                <StackPanel Grid.Column="0" Spacing="2">
                                                    <TextBlock Text="Created" FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                                    <SelectableTextBlock Text="{Binding CreatedDateTime, Converter={x:Static conv:HumanDateTimeConverter.Instance}}" FontSize="{StaticResource FontSizeBody}" />
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" Spacing="2">
                                                    <TextBlock Text="Last Modified" FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                                    <SelectableTextBlock Text="{Binding LastModifiedDateTime, Converter={x:Static conv:HumanDateTimeConverter.Instance}}" FontSize="{StaticResource FontSizeBody}" />
                                                </StackPanel>
                                            </Grid>
                                            <StackPanel Spacing="2">
                                                <TextBlock Text="ID" FontSize="{StaticResource FontSizeCaption}" Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                                <SelectableTextBlock Text="{Binding Id}" FontSize="{StaticResource FontSizeCaption}" Opacity="0.8" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                    <!-- Detection Script Content -->
                                    <TextBlock Text="Detection Script" Classes="SectionHeader" />
                                    <Border Classes="SectionCard">
                                        <SelectableTextBlock Text="{Binding SelectedComplianceScript.DetectionScriptContent, Converter={x:Static conv:BytesToUtf8Converter.Instance}}"
                                                             FontFamily="Monospace" FontSize="{StaticResource FontSizeCaption}"
                                                             TextWrapping="Wrap"
                                                             Foreground="{DynamicResource AppTextSecondaryBrush}" />
                                    </Border>

                                </StackPanel>
                            </ScrollViewer>
                        </DockPanel>
                    </Grid>
                </Grid>
            </DockPanel>

        </Panel>
    </DockPanel>
</suki:SukiWindow>
